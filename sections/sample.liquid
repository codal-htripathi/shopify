{% comment %} {{ 'marquee.css' | asset_url | stylesheet_tag }} {% endcomment %}

<marquee
  behavior="scroll"
  direction="left"
  scrollamount="5"
  width="100%"
  height="50"
  scrollamount="10"
  style="padding-down: 10px; font-family:'Arial';"
>
  <pre>
  "I shop, therefore I am."                                          "It's like receiving a present every time an order shows up at your door."                                                        "Become the person who would attract the results you seek."
  </pre>
</marquee>

